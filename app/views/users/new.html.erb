<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="col-sm-3">
    <div class="form-group">First Name: <%= f.text_field :name, class: "form-control" %></div>
    <div class="form-group">Surname: <%= f.text_field :surname, class: "form-control" %></div>
    <div class="form-group">Email: <%= f.text_field :email, class: "form-control" %></div>
    <div class="form-group">Password: <%= f.password_field :password, class: "form-control" %></div>
    <div class="form-group">Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control " %></div>
    <div class="form-group"><%= f.submit "Submit" %></div>
  </div>

<% end %>